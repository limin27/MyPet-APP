<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="140dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/Beige"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/newFeedback"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginLeft="125sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:fontFamily="@font/georgia"
            android:text="Thanks to your app, my doggo is happy and healthy!!"
            android:textAlignment="viewStart"
            android:textColor="@color/Brown"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/feedbackPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15sp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/feedbackpic" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>