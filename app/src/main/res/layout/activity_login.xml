<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login"
    android:background="@color/Beige">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ss"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/logo"
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gagalin"
        android:text="MY PET"
        android:textAlignment="center"
        android:textColor="@color/Brown"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/title"
        android:id="@+id/smallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/georgia"
        android:text="P E T  C A R E  S E R V I C E S"
        android:layout_gravity="center"
        android:textColor="@color/Brown"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_below="@id/smallTitle"
        android:id="@+id/email"
        android:layout_width="300dp"
        android:inputType="textEmailAddress"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/round_text"
        android:hint="E M A I L"
        android:textAlignment="center"
        android:textColorHint="@color/Brown"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_below="@+id/email"
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_text"
        android:hint="P A S S W O R D"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/Brown"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_below="@+id/password"
        android:id="@+id/loginBtn1"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/LightBrown"
        android:text="L o g i n"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@id/loginBtn1"
        android:id="@+id/registerBtn1"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Not Registered yet? Register Here"
        android:onClick="OpenRegister"
        android:textAlignment="center"
        android:textColor="@color/Brown"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/fingerprintImg"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/fingerprint"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerBtn1"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:visibility="gone"/>

</RelativeLayout>