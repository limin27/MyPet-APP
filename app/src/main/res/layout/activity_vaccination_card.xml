<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Beige"
        android:padding="12dp">

        <TextView
            android:id="@+id/vaccine_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/edit_vaccination_button"
            android:gravity="start"
            android:text="Vaccine Type"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vaccine_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vaccine_type"
            android:layout_alignStart="@id/vaccine_type"
            android:layout_marginStart="2dp"
            android:layout_marginTop="40dp"
            android:gravity="start"
            android:paddingTop="8dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <ImageButton
            android:id="@+id/edit_vaccination_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit vaccination"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/edit"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/delete_vaccination_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/vaccine_date"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-35dp"
            android:layout_marginEnd="-50dp"
            android:layout_toStartOf="@id/edit_vaccination_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete vaccination"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/delete"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
